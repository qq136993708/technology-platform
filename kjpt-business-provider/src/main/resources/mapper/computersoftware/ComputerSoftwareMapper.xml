        </if>
        <if test="entryTime != null and entryTime != '' ">
            and ENTRY_TIME = #{entryTime}
        </if>
        <if test="notes != null and notes != ''">
            and NOTES = #{notes}
        </if>
        <if test="fileIds != null and fileIds != ''">
            and file = #{fileIds}
        </if>

        and deleted != '1'
    </select>



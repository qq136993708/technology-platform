    <select id="query" parameterType="java.util.Map" resultMap="BaseResultMap">

        select * from view_computer_software where 1=1

        <if test="unitName != null and unitName != '' ">
            and UNIT_NAME like CONCAT('%',#{unitName},'%')
        </if>
        <if test="registerNumber != null and registerNumber != ''">
            and REGISTER_NUMBER = #{registerNumber}
        </if>
        <if test="softwareName != null and softwareName != ''">
            and SOFTWARE_NAME = #{softwareName}
        </if>

        <if test="softwareIntroduce != null and softwareIntroduce != ''">
            and SOFTWARE_INTRODUCE = #{softwareIntroduce}
        </if>

        <if test="copyrightOwner != null and copyrightOwner != ''">
            and COPYRIGHT_OWNER = #{copyrightOwner}
        </if>
        <if test="versionNumber != null and versionNumber != ''">
            and VERSION_NUMBER = #{versionNumber}
        </if>


        <if test="recordDate != null and recordDate != '' ">
            and RECORD_DATE = #{recordDate}
        </if>

        <!--<if test="recordDate != null ">-->
            <!--and RECORD_DATE = #{recordDate}-->
        <!--</if>-->



        <!--<if test="recordDateStart != null ">-->
            <!--and DATE_FORMAT(`RECORD_DATE`, '%Y-%m-%d') &gt;= DATE_FORMAT(#{recordDateStart}, '%Y-%m-%d')-->
        <!--</if>-->
        <!--<if test="recordDateEnd != null  ">-->
            <!--and DATE_FORMAT(`RECORD_DATE`, '%Y-%m-%d') &lt;= DATE_FORMAT(#{recordDateEnd}, '%Y-%m-%d')-->
        <!--</if>-->

        <if test="developFinishDate != null  and developFinishDate != '' ">
            and DEVELOP_FINISH_DATE = #{developFinishDate}
        </if>
        <if test="softwareIntro != null and softwareIntro != ''">
            and SOFTWARE_INTRO = #{softwareIntro}
        </if>
        <if test="entryPeople != null and entryPeople != ''">
